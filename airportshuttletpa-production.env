# CONFIGURACIÓN ESPECÍFICA PARA AIRPORTSHUTTLETPA.COM

# URL del backend en producción (Railway - gratuito)
REACT_APP_API_BASE_URL=https://airportshuttletpa-backend.railway.app/api

# Google Maps API Key (mantener la que ya tienes)
REACT_APP_GOOGLE_MAPS_API_KEY=tu-google-maps-api-key-aqui

# Configuración de base de datos MongoDB (Railway)
MONGODB_URI=mongodb+srv://usuario:password@cluster.mongodb.net/airportshuttletpa

# Puerto del servidor backend
PORT=5001

# Configuración de email (usar tu email de Ionos)
EMAIL_HOST=smtp.ionos.com
EMAIL_PORT=587
EMAIL_USER=info@airportshuttletpa.com
EMAIL_PASS=tu-password-email-aqui

# Configuración de Google Calendar
GOOGLE_CLIENT_ID=tu-google-client-id-aqui
GOOGLE_CLIENT_SECRET=tu-google-client-secret-aqui
GOOGLE_REDIRECT_URI=https://airportshuttletpa.com/auth/google/callback

# JWT Secret (generar uno nuevo para producción)
JWT_SECRET=your-super-secure-jwt-secret-here

# Configuración de CORS
CORS_ORIGIN=https://airportshuttletpa.com
