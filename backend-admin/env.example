# Backend Environment Variables Template
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=5001
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb+srv://USERNAME:PASSWORD@CLUSTER.mongodb.net/DATABASE?retryWrites=true&w=majority&appName=APPNAME

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=24h

# CORS Configuration
FRONTEND_URL=http://localhost:3000

# Email Configuration
# Option 1: Resend (Recommended for Railway Free/Hobby plans)
RESEND_API_KEY=re_your_resend_api_key_here

# Option 2: SMTP (Only works on Railway Pro plan and above)
# Configure SMTP settings through admin portal when using SMTP

# Google Calendar Integration (Optional)
GOOGLE_CLIENT_ID=YOUR_GOOGLE_CLIENT_ID_HERE
GOOGLE_CLIENT_SECRET=YOUR_GOOGLE_CLIENT_SECRET_HERE
GOOGLE_REDIRECT_URI=http://localhost:5001/api/google-calendar/auth/callback